veggies=veggies[veggies['vegetable_frequency']!= 'Not provided']

# Define high and low vegetable_consumption
veggies['vegetable_consumption'] = veggies.vegetable_frequency.apply(lambda x: 'high' if x =='Daily' else 'low')


